  "vulnerabilities": [
    {
      "cve": "CVE-2021-31892",
      "cwe": {
        "id": "CWE-295",
        "name": "Improper Certificate Validation"
      },
      "notes": [
        {
          "category": "summary",
          "text": "Due to an error in a third-party dependency, the SSL flags used for setting up a TLS connection to a server are overwritten with wrong settings. This results in a missing validation of the server certificate and thus results in a possible TLS MITM scenario.CVE-2021-31892 has been assigned to this vulnerability. A CVSS v3 base score of 7.4 has been calculated; the CVSS vector string is (AV:N/AC:H/PR:N/UI:N/S:U/C:H/I:H/A:N).",
          "title": "Vulnerability Summary"
        }
      ],
